{
	"name": "zombi-server",
	"type": "commonjs",
	"version": "2.2.5",
	"description": "This is the Zombi Server application development environment",
	"repository": {
		"type": "git",
		"url": "https://github.com/jmlxxvi/zombi-server.git"
	},
	"bin": {
		"zombi": "./bin/cli/index.js"
	},
	"scripts": {
		"build": "npm run schemas && npm run build:clean && npm run build:copy && npm run build:code && npm run build:inst",
		"build:code": "npx tsc",
		"build:copy": "echo 'Copying non-Typescript assets to /build' && cd source ; find . -name '*.json' -print | cpio -pvdmB ../build",
		"build:inst": "cp package.json build/package.json && cp package-lock.json build/package-lock.json && cd build && npm i --omit=dev",
		"build:clean": "rm -rf build",
		"deps:server": "npx madge --image docs/deps/server.svg --exclude '(log/index|platform/config/index|platform/system/utils/index)\\.js$' build/server/index.js",
		"deps:apps": "npx madge --image docs/deps/app.svg --exclude '(log/index|platform/config/index|platform/system/utils/index)\\.js$' build/apps",
		"docs:web": "npx typedoc --plugin none",
		"docs:md": "npx typedoc",
		"docs:deploy": "npm docs:build:web;. ./.env/development; aws s3 cp ./docs/typedoc s3://${AWS_CONFIG_DOCS_BUCKET_NAME} --recursive; echo '\n\n\nDOCS deployed to https://'${AWS_CONFIG_DOCS_BUCKET_NAME}'.s3.'${AWS_DEFAULT_REGION}'.amazonaws.com/index.html'",
		"infra": "cd docker && docker-compose up -d",
		"lambda:deploy": "bash ./deploy.sh",
		"lint": "npx eslint --quiet './source/**/*.ts'",
		"lint:fix": "npx eslint --quiet './source/**/*.ts' --fix",
		"schemas": "npx ts-node source/platform/system/schemas/json2ts.ts",
		"server": ". ./.env/local; export TS_NODE_TRANSPILE_ONLY=true ; npx ts-node --files source/server",
		"server:watch": ". ./.env/local; export TS_NODE_TRANSPILE_ONLY=true ; nodemon --watch 'source/**' --ext 'ts,json' --ignore 'source/**/*.test.ts' --exec 'ts-node --files source/server/index.ts'",
		"test": "export ZOMBI_LOG_LEVEL=DEBUG ; export TS_NODE_TRANSPILE_ONLY=true ; npx jest --detectOpenHandles --runInBand --forceExit",
		"test:cleandb": "npx ts-node source/tests/cleandb.ts",
		"update_packages": "npx npm-check-updates",
		"update_packages:save": "npx npm-check-updates -u"
	},
	"keywords": [
		"backend",
		"RPC",
		"JSON",
		"JSON-RPC",
		"REST"
	],
	"license": "MIT",
	"dependencies": {
		"ajv": "^8.11.0",
		"ajv-formats": "^2.1.1",
		"axios": "^0.27.2",
		"glob": "^8.0.3",
		"google-auth-library": "^8.0.2",
		"kafkajs": "^2.0.1",
		"luxon": "^2.4.0",
		"nodemailer": "^6.7.5",
		"pg": "^8.7.3",
		"redis": "^4.1.0",
		"validator": "^13.7.0"
	},
	"devDependencies": {
		"@aws-sdk/client-apigatewaymanagementapi": "^3.272.0",
		"@aws-sdk/client-sqs": "^3.272.0",
		"@aws-sdk/client-sts": "^3.272.0",
		"@swc/core": "^1.3.27",
		"@swc/jest": "^0.2.24",
		"@types/aws-lambda": "^8.10.97",
		"@types/compression": "^1.7.2",
		"@types/cors": "^2.8.12",
		"@types/debug": "^4.1.7",
		"@types/express": "^4.17.13",
		"@types/glob": "^7.2.0",
		"@types/jest": "^27.5.1",
		"@types/luxon": "^2.3.2",
		"@types/node": "^17.0.36",
		"@types/nodemailer": "^6.4.4",
		"@types/pg": "^8.6.5",
		"@types/redis": "^4.0.11",
		"@types/validator": "^13.7.10",
		"@typescript-eslint/eslint-plugin": "^5.47.1",
		"@typescript-eslint/parser": "^5.26.0",
		"aws-sdk": "^2.1286.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"eslint": "^8.30.0",
		"eslint-import-resolver-typescript": "^3.5.2",
		"eslint-plugin-deprecation": "^1.3.3",
		"eslint-plugin-import": "^2.25.2",
		"express": "^4.18.1",
		"helmet": "^5.1.0",
		"husky": "^8.0.1",
		"jest": "^29.3.1",
		"json-schema-to-typescript": "^10.1.5",
		"madge": "^5.0.1",
		"nock": "^13.2.9",
		"nodemon": "^2.0.16",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"typedoc": "^0.23.23",
		"typedoc-plugin-markdown": "^3.14.0",
		"typescript": "4.9.4"
	}
}
